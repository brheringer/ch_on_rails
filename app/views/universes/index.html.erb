<% title 'Universes' %>

<% if @universes == nil || @universes.length == 0 %>
    <p>No universes found.</p>
    <%= link_to new_universe_path do %>
        <%= image_tag "new_24px.svg", :title => 'New' %>
    <% end %>
<% else %>
    <table class="table table-responsive table-striped">
        <thead>
            <tr><th scope="col">Name</th></tr>
        </thead>
        <tbody>
            <% @universes.each do |u| %>
                <tr>
                    <td><%= u.name %></td>
                    <td>
                    <%= render partial: 'layouts/search_item_buttons', locals: { entity: u } %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
<% end %>
